{% extends 'base.html.twig' %}

{% block title %}Connexion - EduLearn{% endblock %}

{% block body %}
<div class="row justify-content-center align-items-center min-vh-100">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-lg">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <h1 class="h3 mb-2">ðŸŽ“ EduLearn</h1>
                    <p class="text-muted">Connexion Ã  votre espace</p>
                </div>
                
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                {% endfor %}

                <form method="post" action="{{ path('app_login') }}">
                    <div class="mb-3">
                        <label for="inputEmail" class="form-label">Adresse email</label>
                        <input type="email" name="_username" id="inputEmail" class="form-control" placeholder="votre@email.com" required autofocus>
                    </div>
                    
                    <div class="mb-3">
                        <label for="inputPassword" class="form-label">Mot de passe</label>
                        <input type="password" name="_password" id="inputPassword" class="form-control" placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢" required>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button class="btn btn-primary w-100 py-2 mb-3" type="submit">
                        <i class="bi bi-box-arrow-in-right me-2"></i> Se connecter
                    </button>
                </form>

                <div class="text-center mt-3">
                    <small class="text-muted">
                        Pas encore de compte ? Contactez votre administrateur.
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
