{% extends 'base.html.twig' %}

{% block title %}Tableau de bord - {{ user.firstName }}{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h3">
                <i class="bi bi-speedometer2 me-2"></i> Tableau de bord
            </h1>
            <p class="text-muted">Bienvenue, {{ user.firstName }} {{ user.lastName }} !</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="bi bi-book display-4 text-primary mb-3"></i>
                    <h5 class="card-title">Mes Cours</h5>
                    <p class="card-text">Accédez à tous vos cours</p>
                    <a href="/courses" class="btn btn-primary">Voir les cours</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="bi bi-clipboard-check display-4 text-success mb-3"></i>
                    <h5 class="card-title">Mes Résultats</h5>
                    <p class="card-text">Consultez vos notes et progrès</p>
                    <a href="/results" class="btn btn-success">Voir mes résultats</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="bi bi-person display-4 text-info mb-3"></i>
                    <h5 class="card-title">Mon Profil</h5>
                    <p class="card-text">Gérez vos informations</p>
                    <a href="/profile" class="btn btn-info">Mon profil</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <i class="bi bi-info-circle me-2"></i> Informations
                </div>
                <div class="card-body">
                    <p><strong>Email :</strong> {{ user.email }}</p>
                    <p><strong>Rôle :</strong> Étudiant</p>
                    <p><strong>Connecté en tant que :</strong> {{ user.firstName }} {{ user.lastName }}</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
