{% extends 'base.html.twig' %}

{% block title %}Mes Cours{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">
        <i class="bi bi-book me-2"></i> Mes Cours
    </h1>
    <a href="{{ path('course_new') }}" class="btn btn-primary">
        <i class="bi bi-plus-lg me-1"></i> Nouveau cours
    </a>
</div>

{% if courses is empty %}
    <div class="card text-center py-5">
        <div class="card-body">
            <i class="bi bi-journal-x text-muted" style="font-size: 4rem;"></i>
            <h4 class="mt-3">Aucun cours</h4>
            <p class="text-muted">Vous n'avez pas encore créé de cours.</p>
            <a href="{{ path('course_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-lg me-1"></i> Créer mon premier cours
            </a>
        </div>
    </div>
{% else %}
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {% for course in courses %}
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">{{ course.title }}</h5>
                        <p class="card-text text-muted small">
                            {{ course.description|length > 100 ? course.description|slice(0, 100) ~ '...' : course.description }}
                        </p>
                        
                        <div class="d-flex gap-2 mb-3">
                            <span class="badge bg-primary">
                                <i class="bi bi-play-circle me-1"></i> {{ course.videos|length }} vidéos
                            </span>
                            <span class="badge bg-secondary">
                                <i class="bi bi-file-earmark me-1"></i> {{ course.documents|length }} docs
                            </span>
                            <span class="badge bg-info">
                                <i class="bi bi-question-circle me-1"></i> {{ course.quizzes|length }} QCM
                            </span>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <div class="d-flex gap-2">
                            <a href="{{ path('course_show', {id: course.id}) }}" class="btn btn-outline-primary btn-sm flex-fill">
                                <i class="bi bi-eye me-1"></i> Voir
                            </a>
                            <a href="{{ path('course_edit', {id: course.id}) }}" class="btn btn-outline-secondary btn-sm flex-fill">
                                <i class="bi bi-pencil me-1"></i> Modifier
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}
{% endblock %}
