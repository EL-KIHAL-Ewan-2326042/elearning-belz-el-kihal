{% extends 'base.html.twig' %}

{% block title %}Suivi Étudiants{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">
        <i class="bi bi-people-fill me-2"></i> Suivi des Étudiants
    </h1>
</div>

<div class="card mb-4">
    <div class="card-body">
        <div class="input-group mb-3">
            <span class="input-group-text bg-white border-end-0"><i class="bi bi-search"></i></span>
            <input type="text" id="studentSearch" class="form-control border-start-0" placeholder="Rechercher un étudiant par nom ou email...">
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle" id="studentsTable">
                <thead class="table-light">
                    <tr>
                        <th style="width: 60px;"></th>
                        <th>Nom Complet</th>
                        <th>Email</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for student in students %}
                        <tr>
                            <td>
                                <div class="rounded-circle bg-light text-primary d-flex align-items-center justify-content-center fw-bold" style="width: 40px; height: 40px;">
                                    {{ student.firstName|slice(0, 1)|upper }}{{ student.lastName|slice(0, 1)|upper }}
                                </div>
                            </td>
                            <td class="fw-medium">{{ student.firstName }} {{ student.lastName }}</td>
                            <td>{{ student.email }}</td>
                            <td class="text-end">
                                <a href="{{ path('teacher_student_analytics', {id: student.id}) }}" class="btn btn-sm btn-primary">
                                    <i class="bi bi-graph-up me-1"></i> Analyser
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center py-4 text-muted">Aucun étudiant trouvé.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    document.getElementById('studentSearch').addEventListener('keyup', function() {
        let filter = this.value.toLowerCase();
        let rows = document.querySelectorAll('#studentsTable tbody tr');

        rows.forEach(row => {
            let text = row.textContent.toLowerCase();
            row.style.display = text.includes(filter) ? '' : 'none';
        });
    });
</script>
{% endblock %}
