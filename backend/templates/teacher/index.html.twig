{% extends 'base.html.twig' %}

{% block title %}Professeurs{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">
        <i class="bi bi-people me-2"></i> Professeurs
    </h1>
</div>

{% if teachers is empty %}
    <div class="card text-center py-5">
        <div class="card-body">
            <i class="bi bi-people text-muted" style="font-size: 4rem;"></i>
            <h4 class="mt-3">Aucun professeur</h4>
            <p class="text-muted">Il n'y a pas encore de professeurs inscrits.</p>
        </div>
    </div>
{% else %}
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {% for teacher in teachers %}
            <div class="col">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 64px; height: 64px; font-size: 1.5rem;">
                            {{ teacher.firstName|slice(0, 1)|upper }}{{ teacher.lastName|slice(0, 1)|upper }}
                        </div>
                        <h5 class="card-title mb-1">{{ teacher.firstName }} {{ teacher.lastName }}</h5>
                        {% if teacher.specialty %}
                            <p class="text-primary small mb-2">{{ teacher.specialty }}</p>
                        {% endif %}
                        <p class="text-muted small mb-0">{{ teacher.email }}</p>
                    </div>
                    <div class="card-footer bg-transparent text-center border-0">
                        <span class="badge bg-info">
                            {{ teacher.courses|length }} cours
                        </span>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}
{% endblock %}
